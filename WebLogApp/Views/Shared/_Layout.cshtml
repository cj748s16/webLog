<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <base href="/" />

    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/css/bootstrap-material-design.min.css" rel="stylesheet" />
    <link href="~/lib/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/css/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/lib/css/alertify.css" rel="stylesheet" />
    <link href="~/lib/css/themes/bootstrap.css" rel="stylesheet" />

    @if (ViewBag.isDevelopment)
    {
        <link href="~/css/site.less" rel="stylesheet/less" />
    }
    else
    {
        <link href="~/lib/spa/css/site.min.css" rel="stylesheet" />
    }

    @RenderSection("styles", required: false)
</head>
<body>
    <div class="main-container">
        @RenderBody()
    </div>

    <script type="text/javascript">
        @if (ViewBag.isDevelopment) {
            <text>less = { env: "development", async: false, fileAsync: false, poll: 1000, dumpLineNumbers: "comments", relativeUrls: false, rootPath: ":/css/" };</text>
        }
    </script>

    <!-- 1. Load libraries -->
    <!-- Polyfill(s) for older browsers -->
    <script src="~/lib/js/shim.min.js"></script>
    <script src="~/lib/js/zone.js"></script>
    <script src="~/lib/js/Reflect.js"></script>
    <script src="~/lib/js/system.js"></script>
    <script src="~/lib/js/lodash/lodash.min.js"></script>

    <!-- 2. Configure SystemJS -->
    @if (ViewBag.isDevelopment)
    {
        <script src="~/lib/js/systemjs.config.dev.js"></script>
    }
    else
    {
        <script src="~/lib/js/systemjs.config.js"></script>
    }

    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/lib/js/bootstrap.min.js"></script>
    <script src="~/lib/js/material.min.js"></script>
    <script src="~/lib/js/jquery.fancybox.pack.js"></script>
    <script src="~/lib/js/alertify.min.js"></script>

    @if (ViewBag.isDevelopment)
    {
        <script src="~/lib/js/less.min.js" type="text/javascript"></script>
    }

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $.material.init({ "validate": false });
        @if (ViewBag.isWatchLess)
        {
            <text>less.watch();</text>
        }
        @RenderSection("customScript", required: false)
    </script>
</body>
</html>
